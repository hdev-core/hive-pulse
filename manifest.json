
{
  "manifest_version": 3,
  "name": "HivePulse",
  "version": "1.2.2",
  "description": "The heartbeat of your Hive experience. Chat, Stats, and seamless Frontend Switching.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "HivePulse",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "alarms",
    "scripting",
    "sidePanel",
    "cookies",
    "notifications"
  ],
  "host_permissions": [
    "https://ecency.com/*",
    "https://api.hive.blog/*",
    "https://images.ecency.com/*"
  ]
}
