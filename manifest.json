{
  "manifest_version": 3,
  "name": "HiveKit",
  "version": "1.1.0",
  "description": "Switch between Hive frontends, share links, and launch DApps.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "HiveKit",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "alarms"
  ]
}